generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Table {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  source    String?
  sides     Int?
  rows      Row[]
}

model Row {
  id       Int    @id @default(autoincrement())
  table    Table  @relation(fields: [tableId], references: [id])
  tableId  Int
  content  String
  rangemin Int
  rangemax Int
}
